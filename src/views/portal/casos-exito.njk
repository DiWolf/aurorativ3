{% extends "templates/portal.njk" %}
{% block content %}
    <section class="section-header bg-primary text-white pb-7 pb-lg-11">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 text-center">
                    <h1 class="display-2 mb-3">Transformaciones que marcan la diferencia</h1>
                    <p class="lead">
                        Historias reales de cómo he convertido desafíos complejos en soluciones que generan 
                        <strong>resultados medibles y crecimiento sostenible</strong> para mis clientes.
                    </p>
                    <div class="mt-4">
                        <span class="badge badge-white badge-pill mr-2">
                            <i class="fas fa-chart-line mr-1"></i>
                            ROI comprobado
                        </span>
                        <span class="badge badge-soft-white badge-pill mr-2">
                            <i class="fas fa-users mr-1"></i>
                            Clientes satisfechos
                        </span>
                        <span class="badge badge-soft-white badge-pill">
                            <i class="fas fa-trophy mr-1"></i>
                            Casos reales
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="pattern bottom"></div>
    </section>
    <section class="section section-lg line-bottom-light">
  <div class="container mt-n7 mt-lg-n12 z-2">
    <div class="row">
      {% if feature %}
      <!-- Feature card destacada -->
      <div class="col-lg-12 mb-6">
        <div class="card bg-gradient-primary text-white border-0 shadow-soft overflow-hidden">
          <div class="row no-gutters">
            <div class="col-md-6">
              <div class="position-relative">
                <img src="public/{{ feature.main_image or '/front/assets/img/placeholder.jpg' }}" alt="{{ feature.title }}" class="card-img h-100" style="object-fit: cover;">
                {# <div class="position-absolute top-0 left-0 w-100 h-100 bg-gradient-dark opacity-20"></div> #}
                <div class="position-absolute top-0 right-0 m-3">
                  <span class="badge badge-warning badge-pill">
                    <i class="fas fa-star mr-1"></i>
                    Caso destacado
                  </span>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card-body p-5 d-flex flex-column justify-content-between h-100">
                <div>
                  <div class="d-flex align-items-center mb-3">
                    <div class="icon icon-shape icon-shape-white rounded-circle mr-3">
                      <i class="fas fa-building"></i>
                    </div>
                    <div>
                      <h6 class="text-white-50 mb-0">{{ feature.client }}</h6>
                      <small class="text-white-50">
                        <time datetime="{{ feature.created_at }}">{{ feature.created_at | date("MMMM yyyy") }}</time>
                      </small>
                    </div>
                  </div>
                  
                  <a href="/casos-exito/{{ feature.slug }}" class="text-white">
                    <h2 class="mb-3">{{ feature.title }}</h2>
                  </a>
                  
                  {% if feature.resume %}
                  <p class="lead mb-4">{{ feature.resume }}</p>
                  {% endif %}
                  
                  <!-- Métricas de impacto -->
                  <div class="row mb-4">
                    <div class="col-4 text-center">
                      <div class="h4 font-weight-bold mb-1">300%</div>
                      <small class="text-white-50">ROI</small>
                    </div>
                    <div class="col-4 text-center">
                      <div class="h4 font-weight-bold mb-1">6 meses</div>
                      <small class="text-white-50">Recuperación</small>
                    </div>
                    <div class="col-4 text-center">
                      <div class="h4 font-weight-bold mb-1">100%</div>
                      <small class="text-white-50">Satisfacción</small>
                    </div>
                  </div>
                </div>
                
                <div class="d-flex align-items-center justify-content-between">
                  <a href="/casos-exito/{{ feature.slug }}" class="btn btn-white text-primary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    Ver caso completo
                  </a>
                  <div class="text-right">
                    <div class="h6 text-white-50 mb-0">Resultado</div>
                    <div class="h5 text-white font-weight-bold mb-0">Exitoso</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}

      <!-- Otros casos de éxito -->
      {% for project in projects %}
      <div class="col-12 col-md-6 col-lg-4 mb-6">
        <div class="card bg-white border-light shadow-soft h-100 overflow-hidden">
          <div class="position-relative">
            <a href="/casos-exito/{{ project.slug }}">
              <img src="/public{{ project.main_image }}" class="card-img-top" alt="{{ project.title }}" style="height: 200px; object-fit: cover;">
            </a>
            <div class="position-absolute top-0 right-0 m-3">
              <span class="badge badge-success badge-pill">
                <i class="fas fa-check mr-1"></i>
                Completado
              </span>
            </div>
          </div>
          
          <div class="card-body p-4 d-flex flex-column">
            <div class="mb-3">
              <div class="d-flex align-items-center mb-2">
                <div class="icon icon-shape icon-shape-primary rounded-circle mr-2" style="width: 32px; height: 32px;">
                  <i class="fas fa-building" style="font-size: 14px;"></i>
                </div>
                <div>
                  <h6 class="text-muted mb-0 small">{{ project.client }}</h6>
                </div>
              </div>
              
              <a href="/casos-exito/{{ project.slug }}" class="text-dark">
                <h5 class="mb-3">{{ project.title }}</h5>
              </a>
              
              {% if project.resume %}
              <p class="text-muted mb-3 small">{{ project.resume }}</p>
              {% endif %}
            </div>
            
            <!-- Métricas rápidas -->
            <div class="row mb-3">
              <div class="col-6 text-center">
                <div class="h6 text-primary font-weight-bold mb-1">+200%</div>
                <small class="text-muted">Eficiencia</small>
              </div>
              <div class="col-6 text-center">
                <div class="h6 text-primary font-weight-bold mb-1">90%</div>
                <small class="text-muted">Automatización</small>
              </div>
            </div>
            
            <div class="mt-auto">
              <div class="d-flex align-items-center justify-content-between">
                <a href="/casos-exito/{{ project.slug }}" class="btn btn-outline-primary btn-sm">
                  <i class="fas fa-arrow-right mr-1"></i>
                  Ver detalles
                </a>
                <div class="text-right">
                  <div class="small text-muted">Resultado</div>
                  <div class="h6 text-success font-weight-bold mb-0">Exitoso</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    
    <!-- Sección de estadísticas y llamada a la acción -->
    <div class="row mt-6">
      <div class="col-12">
        <div class="card bg-gradient-primary text-white border-0 shadow-soft">
          <div class="card-body p-5">
            <div class="row align-items-center">
              <div class="col-md-8">
                <h3 class="mb-3">¿Listo para ser el próximo caso de éxito?</h3>
                <p class="lead mb-0">
                  Cada proyecto que desarrollo está diseñado para generar 
                  <strong>resultados medibles y crecimiento sostenible</strong>. 
                  Conversemos sobre cómo puedo transformar tu desafío en una ventaja competitiva.
                </p>
              </div>
              <div class="col-md-4 text-center text-md-right mt-4 mt-md-0">
                <a href="/contacto" class="btn btn-white text-primary btn-lg">
                  <i class="fas fa-rocket mr-2"></i>
                  Iniciar mi proyecto
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Estadísticas de impacto -->
    <div class="row mt-5">
      <div class="col-md-3 col-6 mb-4">
        <div class="text-center">
          <div class="icon icon-shape icon-shape-primary rounded-circle mb-3 mx-auto">
            <i class="fas fa-chart-line"></i>
          </div>
          <h4 class="text-primary font-weight-bold mb-1">300%</h4>
          <p class="text-muted mb-0">ROI promedio</p>
        </div>
      </div>
      
      <div class="col-md-3 col-6 mb-4">
        <div class="text-center">
          <div class="icon icon-shape icon-shape-primary rounded-circle mb-3 mx-auto">
            <i class="fas fa-clock"></i>
          </div>
          <h4 class="text-primary font-weight-bold mb-1">6 meses</h4>
          <p class="text-muted mb-0">Recuperación de inversión</p>
        </div>
      </div>
      
      <div class="col-md-3 col-6 mb-4">
        <div class="text-center">
          <div class="icon icon-shape icon-shape-primary rounded-circle mb-3 mx-auto">
            <i class="fas fa-users"></i>
          </div>
          <h4 class="text-primary font-weight-bold mb-1">100%</h4>
          <p class="text-muted mb-0">Clientes satisfechos</p>
        </div>
      </div>
      
      <div class="col-md-3 col-6 mb-4">
        <div class="text-center">
          <div class="icon icon-shape icon-shape-primary rounded-circle mb-3 mx-auto">
            <i class="fas fa-trophy"></i>
          </div>
          <h4 class="text-primary font-weight-bold mb-1">20+</h4>
          <p class="text-muted mb-0">Proyectos exitosos</p>
        </div>
      </div>
    </div>

    <!-- Paginación -->
    <div class="d-flex justify-content-center w-100 mt-3">
      <nav aria-label="Page navigation">
        <ul class="pagination">
          {% if page > 1 %}
          <li class="page-item"><a class="page-link" href="?page={{ page - 1 }}">Anterior</a></li>
          {% endif %}

          {% for i in range(1, totalPages + 1) %}
          <li class="page-item {% if i == page %}active{% endif %}">
            <a class="page-link" href="?page={{ i }}">{{ i }}</a>
          </li>
          {% endfor %}

          {% if page < totalPages %}
          <li class="page-item"><a class="page-link" href="?page={{ page + 1 }}">Siguiente</a></li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>
</section>

{% endblock %}
