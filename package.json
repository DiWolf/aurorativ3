{
  "name": "aurora-ti-portfolio",
  "version": "1.0.0",
  "description": "Aurora TI - Portfolio profesional y sistema de gestiÃ³n de proyectos desarrollado con Node.js, TypeScript y Nunjucks",
  "main": "build/app.js",
  "scripts": {
    "start": "npm run migrate:prod && node build/app.js",
    "start:dev": "npm run migrate:dev && nodemon -L -r tsconfig-paths/register src/app.ts --exec ts-node-dev --transpileOnly",
    "build": "tsc -p . && npm run copy:views && npm run copy:migrations && tsc-alias",
    "copy:views": "shx mkdir -p build/views && ncp src/views build/views",
    "copy:migrations": "shx mkdir -p build/migrations && ncp src/migrations build/migrations",
    "build:css": "sass public/admin/scss:public/admin/css public/front/scss:public/front/css --no-source-map",
    "watch:css": "sass --watch public/admin/scss:public/admin/css",
    "migrate:dev": "ts-node src/scripts/migrate.ts",
    "migrate:prod": "node build/scripts/migrate.js",
    "migrate:standalone": "node migrate.js",
    "migrate:alt": "node scripts/migrate.js",
    "migrate": "npm run migrate:dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "keywords": [
    "portfolio",
    "nodejs",
    "typescript", 
    "express",
    "nunjucks",
    "mysql",
    "cms",
    "freelance",
    "aurora-ti"
  ],
  "author": {
    "name": "Francisco Javier Guerrero",
    "email": "contacto@aurorati.mx",
    "url": "https://aurorati.mx"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/artemisdev.git"
  },
  "homepage": "https://aurorati.mx",
  "bugs": {
    "url": "https://github.com/tu-usuario/artemisdev/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.883.0",
    "@aws-sdk/s3-request-presigner": "^3.858.0",
    "@azure/msal-node": "^3.6.4",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "i18n": "^0.15.1",
    "method-override": "^3.0.0",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "slugify": "^1.6.6",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/i18n": "^0.13.12",
    "@types/jest": "^30.0.0",
    "@types/method-override": "^3.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "ncp": "^2.0.0",
    "nodemon": "^3.1.10",
